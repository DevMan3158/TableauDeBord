{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <thead>
            <tr> 
                <th>Nom</th>
                <th>Lieux d'achat</th>
                <th>Date achat</th>
                <th>Date fin garantie</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.Name }}</td>
                <td>{{ product.lieuxAchat }}</td>
                <td>{{ product.dateAchat ? product.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.dateFinGarantie }} ans</td>
                <td>{{ product.prix }} â‚¬</td>
                <td>{{ product.description }}</td>
                <td>{{ product.photo }}</td>
                <td>
                    <a href="{{ path('app_products_show', {'id': product.id}) }}">Afficher</a>
                    <a href="{{ path('app_products_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_new') }}">Nouveaux produit</a>
{% endblock %}
