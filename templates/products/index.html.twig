{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container-fluid m-3">
         <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{path ('app_homepage')}}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Mes produits</li>
            </ol>
         </nav> 
</div>


<div class="d-flex justify-content-around flex-wrap mb-5">
<h1 class="mx-auto text-decoration-underline">Produits</h1>
</div>

{#{{ product.Name }}
{{ product.lieuxAchat }}
{{ product.dateAchat ? product.dateAchat|date('d-m-Y H:i:s') : '' }}
{{ product.dateFinGarantie }} ans
{{ product.prix }} €
{{ product.description }}
{{ product.photo }}#}

<div class="d-flex justify-content-around flex-wrap ">


{% for product in products %}      
  <div class="row">

      <div class="card shadow p-3 mb-5 bg-body rounded" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">

        <div class="card-body">
          <h5 class="card-title text-center fw-bolder">{{ product.Name }}</h5>
          <p class="card-text text-center">{{ product.description }}</p>
        </div>

        <ul class="list-group list-group-flush">

          <li class="list-group-item text-center">Lieux d'achat: {{ product.lieuxAchat }}</li>
          <li class="list-group-item text-center">Date d'achat: {{ product.dateAchat ?
            product.dateAchat|date('d-m-YH:i:s') : '' }}</li>
          <li class="list-group-item text-center">Fin de garantie: {{ product.dateFinGarantie }} ans</li>
          <li class="list-group-item text-center">Prix: {{ product.prix }} €</li>

        </ul>

        <div class="card-body text-center">
          <a class="btn btn-outline-dark" href="{{ path('app_products_show', {'id': product.id}) }}">Afficher</a>
          <a class="btn btn-outline-dark" href="{{ path('app_products_edit', {'id': product.id}) }}">Modifier</a>
        </div>

      </div>


   </div>


  {% endfor %}
  
</div>

<div class="d-flex justify-content-around flex-wrap mt-5">
<a class="btn btn-dark text-center" href="{{ path('app_products_new') }}">Nouveaux produit</a>
</div>
 

 



{% endblock %}